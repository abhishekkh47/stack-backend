{
  "compilerOptions": {
    "baseUrl": "src",
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "ES6",
    "noImplicitAny": false,
    "outDir": "./build",
    "sourceMap": true,
    "removeComments": true,
    "rootDir": "./src",
    "sourceRoot": "./src",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "paths": {
      "@app/*": ["./*"],
      "@services/*": ["./services/*"],
      "@controllers/*": ["./controllers/*"],
      "@model/*": ["./model/*"],
      "@middleware/*": ["./middleware/*"],
      "@utility/*": ["./utility/*"]
    },
    "typeRoots": ["node_modules/@types", "./typings"]
  }
}
