{
    "compilerOptions": {
        "baseUrl": "src",
        "esModuleInterop": true,
        "module": "commonjs",
        "target": "es2017",
        "noImplicitAny": false,
        "outDir": "./build",
        "sourceMap": true,
        "removeComments": true,
        "rootDir": "./src",
        "sourceRoot": "./src",
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "paths": {
            "@app/*": [
                "./*"
            ],
        },
        "typeRoots": [
            "node_modules/@types",
            "./typings"
        ]
    },
}